{
  "name": "example-with-tailwindcss",
  "type": "module",
  "scripts": {
    "dev": "vinxi dev",
    "dev:mon": "run-p dev \"monitor:solid {@}\" --",
    "monitor:solid": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-by-port.ps1 -Port 3000 -DurationSec 300 -OutFile solid_metrics.csv",
    "monitor:node": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-process.ps1 -ProcessName node -DurationSec 300 -OutFile node_metrics.csv",
    "monitor:browser": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-process.ps1 -ProcessName chrome -DurationSec 300 -OutFile chrome_metrics.csv",
    "build": "vinxi build",
    "start": "vinxi start",
    "analyze": "npm run build && node analyze-bundle.cjs && echo 'Opening visual analysis...' && start bundle-analysis.html",
    "analyze-text": "npm run build && node analyze-bundle.cjs",
    "analyze-visual": "npm run build && start bundle-analysis.html",
    "analyze-code": "node analyze-code.cjs",
    "analyze-lines": "npx sloc src",
    "analyze-full": "node analyze-comprehensive.cjs"
  },
  "dependencies": {
    "@solidjs/router": "^0.14.1",
    "@solidjs/start": "^1.0.4",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "solid-js": "^1.8.18",
    "tailwindcss": "^3.4.3",
    "vinxi": "^0.3.14"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "cloc": "^2.4.0-cloc",
    "npm-run-all2": "^7.0.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sloc": "^0.3.2",
    "source-map-explorer": "^2.5.3",
    "vite-bundle-analyzer": "^0.22.3",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
