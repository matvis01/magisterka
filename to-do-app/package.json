{
  "name": "to-do-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:mon": "run-p start \"monitor:angular {@}\" --",
    "monitor:angular": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-by-port.ps1 -Port 4200 -DurationSec 300 -OutFile angular_metrics.csv",
    "monitor:node": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-process.ps1 -ProcessName node -DurationSec 300 -OutFile node_metrics.csv",
    "monitor:browser": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-process.ps1 -ProcessName chrome -DurationSec 300 -OutFile chrome_metrics.csv",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "serve:ssr:to-do-app": "node dist/to-do-app/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.9",
    "@angular/cdk": "^19.2.14",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/material": "^19.2.14",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/ssr": "^19.2.10",
    "@ngrx/effects": "^19.1.0",
    "@ngrx/store": "^19.1.0",
    "@ngrx/store-devtools": "^19.1.0",
    "express": "^4.18.2",
    "ngx-mat-timepicker": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^11.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.10",
    "@angular/cli": "^19.2.10",
    "@angular/compiler-cli": "^19.2.0",
    "@angular/forms": "^19.2.9",
    "@types/express": "^4.17.17",
    "@types/node": "^18.18.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.16",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "~5.7.2"
  }
}
