{
	"name": "svelte-habit-tracker",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:mon": "run-p dev \"monitor:vite {@}\" --",
		"monitor:vite": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-by-port.ps1 -Port 5173 -DurationSec 300 -OutFile vite_metrics.csv",
		"monitor:node": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-process.ps1 -ProcessName node -DurationSec 300 -OutFile node_metrics.csv",
		"monitor:browser": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-process.ps1 -ProcessName chrome -DurationSec 300 -OutFile chrome_metrics.csv",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"autoprefixer": "^10.4.21",
		"npm-run-all2": "^7.0.2",
		"postcss": "^8.5.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"rollup-plugin-visualizer": "^6.0.3",
		"source-map-explorer": "^2.5.3",
		"svelte": "^5.0.0",
		"svelte-awesome-color-picker": "^4.0.1",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.17",
		"typescript": "^5.0.0",
		"vite": "^6.0.0",
		"vite-bundle-analyzer": "^0.22.3",
		"webpack-bundle-analyzer": "^4.10.2"
	}
}
