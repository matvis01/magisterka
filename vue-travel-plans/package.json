{
  "name": "vue-travel-plans",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
  "dev": "vite",
  "dev:mon": "run-p dev \"monitor:vite {@}\" --",
  "monitor:vite": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-by-port.ps1 -Port 5173 -DurationSec 300 -OutFile vite_metrics.csv",
  "monitor:node": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-process.ps1 -ProcessName node -DurationSec 300 -OutFile node_metrics.csv",
  "monitor:browser": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/monitor-process.ps1 -ProcessName chrome -DurationSec 300 -OutFile chrome_metrics.csv",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "format": "prettier --write src/",
    "analyze": "npm run build && node analyze-bundle.cjs && echo 'Opening visual analysis...' && start bundle-analysis.html",
    "analyze-text": "npm run build && node analyze-bundle.cjs",
    "analyze-visual": "npm run build && start bundle-analysis.html",
  "analyze-detailed": "npm run build && node analyze-detailed.cjs"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "@types/uuid": "^10.0.0",
    "pinia": "^3.0.2",
    "uuid": "^11.1.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.4",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.3",
    "prettier": "3.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "sloc": "^0.3.2",
    "tailwindcss": "^4.1.4",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-bundle-analyzer": "^0.22.3",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
